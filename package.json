{
  "name": "html-responsive-img",
  "version": "0.1.0",
  "description": "Transform HTML img tags to responsive picture elements or srcset attributes",
  "keywords": [
    "responsive",
    "images",
    "html",
    "picture",
    "srcset",
    "transform",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "browser": [
        "dist/browser.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "import": "./dist/browser.js"
    }
  },
  "bin": {
    "responsify": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:all": "./scripts/coverage-all-versions.sh",
    "test:coverage:node18": "nvm exec 18 npm run test:coverage",
    "test:coverage:node20": "nvm exec 20 npm run test:coverage",
    "test:coverage:node22": "nvm exec 22 npm run test:coverage",
    "test:all": "./scripts/test-all-versions.sh",
    "test:all-quick": "nvm exec 18 npm test && nvm exec 20 npm test && nvm exec 22 npm test",
    "test:node18": "nvm exec 18 npm test",
    "test:node20": "nvm exec 20 npm test",
    "test:node22": "nvm exec 22 npm test",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.8",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "node-html-parser": "^7.0.1"
  }
}
